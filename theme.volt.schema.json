{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/ghishadow/lapce-schema/raw/main/volt.schema.json",
  "title": "volt.toml schema for Lapce plugin",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "display-name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "author": {
      "type": "string"
    },
    "repository": {
      "type": "string"
    },
    "themes": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "required": [
    "name",
    "display-name",
    "description",
    "version",
    "author",
    "repository",
    "themes"
  ]
}
